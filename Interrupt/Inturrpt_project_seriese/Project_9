//1023_external_project09
#include <iom128v.h>
#include <macros.h>

void delay_m(unsigned int m);

unsigned char number[10] = {0x04, 0x2f, 0x18, 0x09, 0x23, 0x41, 0x40, 0x07, 0x00, 0x01};

char count = 0;
volatile char state = 0;
volatile char up = 1;

int main(void)
{
    DDRD = 0x7f;
    EICRB = 0x0A;
    EIMSK = 0x30;
    SREG |= 0x80;
    PORTD = number[count];
    while(1)
    {
        if((state == 1) && (up == 1)){
            if(count == 10) count = 0;
            PORTD = number[count++];
            delay_m(500);
        }

        else if((state == 1) && (up == 0)){
            if(count == 0) count = 9;
            else count--;

            PORTD = number[count];
            delay_m(500);
        }
        else {

             delay_m(20);
        }
    }
}

#pragma interrupt_handler int4_isr:iv_INT4
void int4_isr(void)
{
    state = 1;
    up = 1;

  
    delay_m(100);
    EIFR = 0x10; 
}

#pragma interrupt_handler int5_isr:iv_INT5
void int5_isr(void)
{
    state = 1;
    up = 0;
    delay_m(100);
    EIFR = 0x20; 
}


void delay_m(unsigned int m){
    unsigned int i, j;
    for(i=0;i<m;i++){
        for(j=0;j<2100;j++){
            ;
        }
    }
}
